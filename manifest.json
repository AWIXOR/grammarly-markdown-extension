{
  "manifest_version": 2,
  "name": "Grammarly to Markdown",
  "version": "0.1.0",
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js":      ["scripts/turndown.js" ,"scripts/content.js"]
  }],
  "browser_action": {
    "default_popup": "action.html"
  },
  "permissions": [
     "activeTab",
     "tabs"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}
